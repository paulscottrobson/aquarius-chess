@copies	!
		ld 		(hl),e
		inc 	hl
		ld 		(hl),d
		dec 	hl
@end

; ***************************************************************************************

@copies	@
		ld 		a,(hl)
		inc 	hl
		ld		h,(hl)
		ld		l,a
@end

; ***************************************************************************************

@calls	+!
		ld 		a,(hl)
		add 	a,e
		ld 		(hl),a
		inc 	hl
		ld 		a,(hl)
		adc 	a,d
		ld 		(hl),a
		dec 	hl
		ret
@end

; ***************************************************************************************

@copies	c!
		ld 		(hl),e
@end

; ***************************************************************************************

@copies	c@
		ld 		l,(hl)
		ld 		h,0
@end

; ***************************************************************************************

@copies	p@
		in 		l,(c)
		ld 		h,0
@end

; ***************************************************************************************

@copies 	p!
		out 	(c),l
@end
	
	